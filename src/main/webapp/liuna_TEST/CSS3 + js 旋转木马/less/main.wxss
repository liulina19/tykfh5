@charset "utf-8";
html {
  font-size: 62.5%;
  /*10 ÷ 16 × 100% = 62.5%*/
}
body {
  font-size: 1.4rem;
  /*1.4 × 10px = 14px */
}
h1 {
  font-size: 2.4rem;
  /*2.4 × 10px = 24px*/
}
* {
  margin: 0;
  padding: 0;
}
ul,
ol {
  list-style: none;
}
a {
  text-decoration: none;
}
img {
  border: none;
}
.cearfix {
  zoom: 1;
}
.cearfix:after {
  content: "";
  display: block;
  clear: both;
}
